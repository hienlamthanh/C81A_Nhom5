<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietSach">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarchitietsach"
        android:background="#189EFF"
        app:titleTextColor="#fff"
        app:title = "Chi tiết sách"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageviewchitietsach"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView

                    android:id="@+id/textviewtenchitietsach"
                    android:textStyle="bold"
                    android:text="Tên sách"
                    android:textColor="#003496"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textviewgiachitietsach"
                android:textSize="20sp"
                android:text="Giá sách"
                android:textColor="#f20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_margin="5dp"
                android:background="@drawable/spinner"
                android:id="@+id/spinner"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </Spinner>

            <Button
                android:id="@+id/buttondatmua"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="#F44336"
                android:text="Giỏ hàng"
                android:textColor="#fff"
                android:textSize="15sp"></Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#D6EEFC"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:textColor="#f20"
            android:textSize="20dp"
            android:text="Mô tả chi tiết sách"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:id="@+id/textviewmotachitietsach"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </ScrollView>

    </LinearLayout>

</LinearLayout>

